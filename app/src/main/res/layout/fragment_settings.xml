<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_primary"
    android:orientation="vertical"
    android:weightSum="6"
    app:theme="@style/AppThemeSettings"
    tools:context="com.zeus.multiuseapp.common.SettingsFragment"
    tools:ignore="UselessParent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/settings_primary_dark"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/choose_default_app"
            android:textColor="@color/cardview_light_background"
            android:textSize="30sp"/>
    </android.support.v7.widget.CardView>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_weight="5"
        android:weightSum="5">

        <RadioButton
            android:id="@+id/radioNotepad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingLeft="50dp"
            android:text="@string/notepad"
            android:textColor="@color/cardview_light_background"
            android:textSize="30sp"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

        <RadioButton
            android:id="@+id/radioTodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:text="@string/todo_list"
            android:textColor="@color/cardview_light_background"
            android:textSize="30sp"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

        <RadioButton
            android:id="@+id/radioDrawing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:text="@string/drawing"
            android:textColor="@color/cardview_light_background"
            android:textSize="30sp"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

        <RadioButton
            android:id="@+id/radioReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:text="@string/reminder"
            android:textColor="@color/cardview_light_background"
            android:textSize="30sp"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

        <RadioButton
            android:id="@+id/radioMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:text="@string/movie_list"
            android:textColor="@color/cardview_light_background"
            android:textSize="30sp"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>
    </RadioGroup>
</LinearLayout>

